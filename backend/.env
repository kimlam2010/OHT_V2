# OHT-50 Backend Environment Configuration

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./oht50.db

# Redis
REDIS_URL=redis://localhost:6379

# Security - REQUIRED FOR PRODUCTION
# Generate a secure JWT secret: openssl rand -hex 32
JWT_SECRET=ea2442fdca1ae855a6d54bdc59f4ff1dbe7f17c560b6ed01ffc3a91266108614
JWT_ALGORITHM=HS256
JWT_EXPIRY=1800

# Testing (automatically set during tests)
TESTING=false

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Hardware Integration
RS485_PORT=/dev/ttyOHT485
RS485_BAUD_RATE=115200
RS485_TIMEOUT=1.0

# Firmware Integration
FIRMWARE_URL=http://localhost:8080
USE_MOCK_FIRMWARE=false  # Set to true for development/testing (includes RS485 mock)

# Performance
MAX_WORKERS=4
LOG_LEVEL=INFO

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
