# OHT-50 Backend Environment Configuration

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./oht50.db

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Hardware Integration
RS485_PORT=/dev/ttyOHT485
RS485_BAUD_RATE=115200
RS485_TIMEOUT=1.0

# Performance
MAX_WORKERS=4
LOG_LEVEL=INFO

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Firmware Integration - REAL FIRMWARE
FIRMWARE_URL=http://localhost:8080
FIRMWARE_URL_ALT=http://localhost:8081
USE_MOCK_FIRMWARE=false
FIRMWARE_TIMEOUT=5.0
FIRMWARE_RETRY_COUNT=3
