# EditorConfig for OHT-50 Firmware
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{cmake,CMakeLists.txt}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[Makefile]
indent_style = tab

